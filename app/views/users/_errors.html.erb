<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-warning"><h4> There are <%= pluralize(@user.errors.count, "error") %>:</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
