<div class="container text-center">
  <%= render 'users/errors', object: @user %>
  <%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'control-label col-md-3' %>
      <div class="col-md-6"><%= f.text_field :name, class: 'form-control' %></div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'control-label col-md-3' %>
      <div class="col-md-6"><%= f.email_field :email, class: 'form-control' %></div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-label col-md-3' %>
      <div class="col-md-6"><%= f.password_field :password, class: 'form-control' %></div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password", class: 'control-label col-md-3' %>
      <div class="col-md-6"><%= f.password_field :password_confirmation, class: 'form-control' %></div>
    </div>

    <div class="form-group">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
